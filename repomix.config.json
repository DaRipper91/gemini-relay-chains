{
  "output": {
    "style": "xml",
    "filePath": "gemini-relay-context.xml",
    "removeComments": false,
    "removeEmptyLines": true,
    "topFilesLength": 10,
    "showLineNumbers": false
  },
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/coverage/**",
      "**/build/**",
      "package-lock.json",
      "pnpm-lock.yaml",
      "yarn.lock",
      "bun.lockb"
    ]
  }
}
